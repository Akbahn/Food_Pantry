<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.main.food_pantry.Controllers.AdminControllers.AdminAnalyticsController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Title -->
    <top>
        <Label text="ðŸ“Š Pantry Analytics"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2e8b57; -fx-padding: 20;" />
    </top>

    <!-- Charts -->
    <center>
        <VBox spacing="40" alignment="CENTER" style="-fx-padding: 30;">

            <!-- Most Requested Foods -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Most Requested Food Items"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <BarChart fx:id="foodChart"
                          prefHeight="250" prefWidth="700">
                    <xAxis>
                        <CategoryAxis label="Food Items"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Requests"/>
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Top Requesting Students -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Top Requesting Students"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <BarChart fx:id="userChart"
                          prefHeight="250" prefWidth="700">
                    <xAxis>
                        <CategoryAxis label="Usernames"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Total Requests"/>
                    </yAxis>
                </BarChart>
            </VBox>
        </VBox>
    </center>
</BorderPane>
