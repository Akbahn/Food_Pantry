<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.main.food_pantry.Controllers.VolunteerControllers.ManageRequestsController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Pending Requests" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="requestTable" prefWidth="700">
        <columns>
            <TableColumn fx:id="studentColumn" text="Student" prefWidth="140"/>
            <TableColumn fx:id="foodColumn" text="Food Item" prefWidth="140"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>
