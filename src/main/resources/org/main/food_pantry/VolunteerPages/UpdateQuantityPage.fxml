<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.main.food_pantry.Controllers.VolunteerControllers.UpdateQuantityController"
      style="-fx-padding: 20;">

    <Label text="Update Quantity" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="quantityField" promptText="Enter new quantity" prefWidth="200"/>
    <DatePicker fx:id="expirationDatePicker" prefWidth="200"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Update" onAction="#handleUpdate" prefWidth="100"/>
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100"/>
    </VBox>

</VBox>
