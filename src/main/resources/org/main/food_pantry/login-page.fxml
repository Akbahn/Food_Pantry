<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="256.0" prefWidth="437.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.food_pantry.Controllers.LoginPageController">
   <Label style="-fx-font-size: 18;" text="School Food Pantry Login" />
   <TextField fx:id="usernameField" promptText="Username" />
   <PasswordField fx:id="passwordField" promptText="Password" />
   <HBox alignment="CENTER" prefHeight="25.0" prefWidth="435.0">
      <children>
         <Button onAction="#handleLogin" text="Login">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="signUpBtn" mnemonicParsing="false" onAction="#handleSignup" text="Sign up" />
      </children>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
   <Label fx:id="statusLabel" textFill="red" />
</VBox>
