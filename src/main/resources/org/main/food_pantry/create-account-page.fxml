<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="431.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.food_pantry.Controllers.CreateAccountController">

   <Label text="Create Account" />
   <TextField fx:id="nameField" promptText="Full Name" />
   <TextField fx:id="usernameField" promptText="Username" />
   <PasswordField fx:id="passwordField" promptText="Password" />
   <ComboBox fx:id="roleComboBox" />
   <Button onAction="#handleCreateAccount" text="Create Account" />
   <Button fx:id="backBtn" mnemonicParsing="false" onAction="#goBack" text="Back" />
   <Label fx:id="statusLabel" textFill="red" />
</VBox>
