<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.main.food_pantry.Controllers.StudentControllers.FoodListPageController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="categoryLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Category Name"/>
            <Button fx:id="checkoutBtn" text="Checkout" onAction="#handleCheckout"/>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="foodFlowPane" hgap="20" vgap="20" alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>
</BorderPane>
