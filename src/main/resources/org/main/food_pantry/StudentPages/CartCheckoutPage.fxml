<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.main.food_pantry.Controllers.StudentControllers.CartCheckoutPageController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: #f9f9f9;">

    <top>
        <Label text="ðŸ›’ Your Cart"
               style="-fx-font-size: 26px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
            <VBox fx:id="cartItemsBox" spacing="15" style="-fx-padding: 10;">
                <!-- Items will be dynamically added here -->
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="totalLabel"
                   text="Total Items: 0"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;" />

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Clear Cart"
                        fx:id="clearBtn"
                        onAction="#handleClearCart"
                        style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button text="Submit Request"
                        fx:id="submitBtn"
                        onAction="#handleSubmitCart"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
