<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="564.0" prefWidth="719.0" spacing="20.0" stylesheets="@Styles/splashpagestyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.food_pantry.Controllers.SplashPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView blendMode="DARKEN" fitHeight="150.0" fitWidth="275.0" opacity="0.94" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/FSC%20Food%20Pantry%20Logo.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <HBox prefHeight="212.0" prefWidth="679.0">
         <children>
            <ListView fx:id="requestedItemList" prefHeight="137.0" prefWidth="679.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#goToLoginPage" text="Login" />
            <Button fx:id="signUpBtn" mnemonicParsing="false" onAction="#goToSignUpPage" text="Sign Up" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
